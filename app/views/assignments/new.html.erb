<body id="signinpage">
  <div class="border-form-div">
    <h2>New Assignment</h2>
    <%= form_for(@assignment) do |f| %>
    <p>Course name:</p>
    <div id="form_style">
      <%= f.select :course_id, options_for_select(current_user.courses.map{|c| [c.name, c.id]}) %>
      <div><%= f.label :name %><br />
      <%= f.text_field :name %></div>
      <div><%= f.label :description %><br />
      <%= f.text_field :description %></div>
      <div><%= f.label :duedate %><br />
      <%= f.date_field :duedate %></div>
      <div>
        <p>What type of math problems?</p>
        <%=select_tag :problemtype, options_for_select([ "Addition", "Subtraction", "Multiplication" ], "Addition") %>
      </div>
      <div>
        <p>Difficulty?</p>
        <%=select_tag :difficulty, options_for_select([ "Easy", "Medium", "Hard" ], "Easy") %>
      </div>
      <div>
        <p>How many problem sets?</p>
        <%= f.select :problemnumber, [["1 Set", 1],["2 Sets",2],["3 Sets",3]] %>
      </div>
    </div>
    <br>
    <div id="submitbutton">
      <div><%= f.submit "Submit" %></div><br>
    </div>
    <a href="/assignments#">Skip and go to Dashboard</a>
    <% end %>
  </div>
</body>